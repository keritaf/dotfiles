# ZSH local settings
DEFAULT_USER="keritaf"

# RVM path
PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting

# TexLive paths
PATH=$PATH:/usr/local/texlive/2012/bin/x86_64-linux
MANPATH=$MANPATH:/usr/local/texlive/2012/texmf/doc/man
INFOPATH=$INFOPATH:/usr/local/texlive/2012/texmf/doc/info

# Perl paths
export PERL_LOCAL_LIB_ROOT="/home/keritaf/perl5";
export PERL_MB_OPT="--install_base /home/keritaf/perl5";
export PERL_MM_OPT="INSTALL_BASE=/home/keritaf/perl5";
export PERL5LIB="/home/keritaf/perl5/lib/perl5/x86_64-linux-gnu-thread-multi:/home/keritaf/perl5/lib/perl5";
export PATH="/home/keritaf/perl5/bin:$PATH";

